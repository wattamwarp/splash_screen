<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#FFCDD2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:typeface="serif"
        android:textSize="40sp"
        android:textColor="#ce3232"
        android:text="Raise Requirnment"
        android:layout_marginBottom="16dp"

        android:layout_gravity="center_horizontal"
        android:id="@+id/contact_form_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/add_req_storeid"
                android:layout_height="35dp"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:hint="Store ID"
                android:ems="10"/>

    <EditText
        android:id="@+id/add_req_requireid"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:inputType="number"
        android:hint="Requirnment ID"
        android:ems="10"/>

    <TextView
        android:id="@+id/add_req_date"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Your Date"
        android:ems="10"/>
    <TextView

        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="Sender"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:ems="10"/>
    <Spinner
        android:id="@+id/raise_req_spn_from"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="[Select Customer]"
        />
    <TextView
        android:id="@+id/add_req_tvfrom"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:hint="From"
        android:ems="10"/>
    <Spinner
        android:id="@+id/raise_req_spn_fromaddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="[Select a Address]"
        />
    <TextView
        android:id="@+id/add_req_tvfromaddress"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:hint="From Address"
        android:ems="10"/>
    <TextView

        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="Reciever"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_gravity="center_horizontal"

        android:ems="10"/>

    <Spinner
        android:id="@+id/raise_req_spn_to"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="[Select Customer]"
        />
    <TextView
        android:id="@+id/add_req_tvto"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:hint="To"
        android:ems="10"/>
    <Spinner
        android:id="@+id/raise_req_spn_toaddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="[Select a Address]"
        />
    <TextView
        android:id="@+id/add_req_tvtoaddress"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:hint=" To Address"
        android:ems="10"/>



    <EditText
        android:id="@+id/editText17"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:inputType="numberDecimal"
        android:hint="Tonnage"
        android:ems="10"/>

    <Button
        android:background="@color/colorPrimaryDark"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:paddingRight="70dp"
        android:paddingLeft="70dp"
        android:elevation="4dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>